#include <stdio.h>

int main() {
    char str1[100], str2[100];
    int i, length;

    printf("Enter a string: ");
    fgets(str1, sizeof(str1), stdin);

    printf("Enter the length of the string to be copied: ");
    scanf("%d", &length);

    for(i = 0; i < length; i++) {
        str2[i] = str1[i];
    }

    str2[i] = '\0';

    printf("Copied string is: %s", str2);

    return 0;
}
