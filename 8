#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, j, length;
    char temp;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    length = strlen(str);

    // sort the string using bubble sort
    for(i = 0; i < length - 1; i++) {
        for(j = i + 1; j < length; j++) {
            if(str[i] > str[j]) {
                temp = str[i];
                str[i] = str[j];
                str[j] = temp;
            }
        }
    }

    printf("Sorted string in ascending order: %s", str);

    return 0;
}
