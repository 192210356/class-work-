#include <stdio.h>

// Function to find the largest element of an array
int findLargest(int arr[], int n) {
    int i, largest;
    
    // Initialize the largest element as the first element of the array
    largest = arr[0];
    
    for(i = 1; i < n; i++) {
        if(arr[i] > largest) {
            largest = arr[i];
        }
    }
    
    return largest;
}

int main() {
    int n, arr[100], i, largest;
    
    printf("Enter the number of elements to be stored in the array: ");
    scanf("%d", &n);
    
    printf("Enter %d elements in the array: \n", n);
    for(i = 0; i < n; i++) {
        printf("element - %d : ", i);
        scanf("%d", &arr[i]);
    }
    
    largest = findLargest(arr, n);
    printf("\nThe largest element in the array is %d.", largest);
    
    return 0;
}
