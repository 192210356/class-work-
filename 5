#include <stdio.h>
#include <math.h>

// Function to find the number of digits in a given number
int countDigits(int num) {
    int count = 0;
    while(num != 0) {
        count++;
        num /= 10;
    }
    return count;
}

// Function to check if a number is an Armstrong number or not
int checkArmstrong(int num) {
    int digits, originalNum, sum = 0;
    
    // Find the number of digits in the given number
    digits = countDigits(num);
    
    // Store the original number in a separate variable
    originalNum = num;
    
    // Calculate the sum of the cube of each digit
    while(num != 0) {
        sum += pow(num % 10, digits);
        num /= 10;
    }
    
    // Check if the sum is equal to the original number
    if(sum == originalNum) {
        return 1;
    }
    else {
        return 0;
    }
}

int main() {
    int num, isArmstrong;
    
    printf("Enter a number: ");
    scanf("%d", &num);
    
    isArmstrong = checkArmstrong(num);
    
    if(isArmstrong == 1) {
        printf("%d is an Armstrong number.", num);
    }
    else {
        printf("%d is not an Armstrong number.", num);
    }
    
    return 0;
}
