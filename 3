#include <stdio.h>

// Function to check if a number is prime or not
int checkPrime(int num) {
    int i;
    for(i = 2; i <= num/2; i++) {
        if(num % i == 0) {
            return 0;
        }
    }
    return 1;
}

int main() {
    int num, isPrime;
    
    printf("Enter a positive number: ");
    scanf("%d", &num);
    
    isPrime = checkPrime(num);
    
    if(isPrime == 1) {
        printf("%d is a prime number.", num);
    }
    else {
        printf("%d is not a prime number.", num);
    }
    
    return 0;
}
