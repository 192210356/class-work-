#include <stdio.h>

// Function to check if a number is even or odd
void checkEvenOdd(int num) {
    if(num % 2 == 0) {
        printf("%d is even.", num);
    }
    else {
        printf("%d is odd.", num);
    }
}

int main() {
    int num;
    
    printf("Enter a number: ");
    scanf("%d", &num);
    
    checkEvenOdd(num);
    
    return 0;
}
